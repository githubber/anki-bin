#!/usr/bin/env perl
use 5.14.0;
use warnings;
use Anki::Database;
use utf8::all;

my $db = Anki::Database->new(file => $ENV{ANKI_DECK});
my $sth = $db->prepare("
    select value from fields
    join fieldModels on (fields.fieldModelId = fieldModels.id)
    where
        fieldModels.name = '日本語'
        and factId in (
            select factId from fields
            join fieldModels on (fields.fieldModelId = fieldModels.id)
            where
                fieldModels.name = '起こり'
                and value in ('Dictionary.app', 'Smart.fm')
                and factId in (
                    select factId from fields
                    join fieldModels on (fields.fieldModelId = fieldModels.id)
                    where
                        fieldModels.name = '読み'
                        and value = ''
                )
        )
;");

$sth->execute;

while (my ($sentence) = $sth->fetchrow_array) {
    say $sentence;
}

