#!/usr/bin/env perl
use strict;
use warnings;

my @scripts = qw/
    anki-tidy
    smartfm-divergence
    source-typos
    context-typos
    tag-typos
    reading-typos
    spurious-readings
    needed-readings
    marked-cards
    dictionary-translations
    kanji-order
/;

for my $script (@scripts) {
    print "$script:\n";
    system($script);
    print "\n";
}

