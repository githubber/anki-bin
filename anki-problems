#!/usr/bin/env perl
use strict;
use warnings;

my @scripts = qw/
    dictionary-translations
    kanji-order
    marked-cards
    anki-tidy
    context-typos
    smartfm-divergence
    tag-typos
    reading-typos
    source-typos
    spurious-readings
    needed-readings
    context-sentence
    corpus-divergence
/;

for my $script (@scripts) {
    print "$script:\n";
    system($script);
    print "\n";
}

